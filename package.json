{
  "name": "esbgqlserver",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "create-indices": "babel-node ./elastic/create_indices.js",
    "put-mappings-summary": "babel-node ./elastic/mappings_summary.js",
    "put-mappings-raw": "babel-node ./elastic/mappings_raw.js",
    "load-sample-data": "babel-node ./elastic/load_sample_data.js",

    "mapping_repository": "node ./elastic/mapping_repository.js",
    "create_repository_indices": "node ./elastic/esb_repository/create_repository_indices.js",
    "create_repository_mapping": "node ./elastic/esb_repository/create_repository_mappings.js",
    "upload_repository_data": "node ./elastic/esb_repository/upload_repository_data.js",

    "load_metadata": "node ./elastic/load_metadata.js",
    "start": "babel-node server.js --exec babel-node --presets es2015 --plugins transform-class-properties",
    "debug": "nodemon server.js --exec babel-node --presets es2015 --plugins transform-class-properties --inspect-brk",
    "debug-mock": "nodemon server.js --exec babel-node --presets es2015 --plugins transform-class-properties --inspect-brk --mock",
    "flow": "flow",
    "test": "jest"
  },
  "jest": {
    "collectCoverageFrom": [
      "*.{js,jsx}"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-engine": "^1.1.0",
    "apollo-server-express": "^1.3.6",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "casual": "^1.5.19",
    "cors": "^2.8.4",
    "elastic-builder": "^1.1.7",
    "elasticsearch": "^14.2.2",
    "express": "^4.16.3",
    "graphql": "^0.12.3",
    "graphql-kafka-subscriptions": "^0.2.2",
    "graphql-playground-middleware": "^1.1.2",
    "graphql-subscriptions": "^0.5.6",
    "graphql-tools": "^2.18.0",
    "no-kafka": "^3.2.8",
    "nodemon": "^1.17.3",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "subscriptions-transport-ws": "^0.9.5"
  },
  "devDependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "jest": "^22.4.3"
  },
  "babel": {
    "presets": [
      "es2015",
      "flow",
      "stage-0"
    ],
    "plugins": [
      [
        "transform-class-properties",
        {
          "spec": true
        }
      ]
    ]
  }
}
